{
    "name": "otaodev/controle-freelas",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Otaodev\\PhpBestPractices\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Otaodev\\PhpBestPractices\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tiago Oliveira",
            "email": "dev.tiago.oliveira@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.26.16",
        "phpmd/phpmd": "^2.13",
        "squizlabs/php_codesniffer": "^3.7",
        "phpro/grumphp": "^1.13",
        "phpstan/phpstan": "^1.9",
        "enlightn/security-checker": "^1.10"
    },
    "require": {
        "psr/http-server-handler": "^1.0",
        "slim/slim": "4.*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true
        }
    }
}
