{
    "name": "otaodev/php-best-practice",
    "description": "Project where I use to best of php development",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Otaodev\\PhpBestPractice\\": "src/",
            "Otaodev\\PhpBestPractice\\Presentation\\": "src/presentation",
            "Otaodev\\PhpBestPractice\\Presentation\\Controllers\\": "src/presentation/controllers"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\Presentation\\Controllers\\": "tests/unit/presentation/controllers"
        }
    },
    "authors": [
        {
            "name": "Tiago Oliveira",
            "email": "dev.tiago.oliveira@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.26.16",
        "phpmd/phpmd": "^2.13",
        "squizlabs/php_codesniffer": "^3.7",
        "phpro/grumphp": "^1.13",
        "phpstan/phpstan": "^1.9"
    }
}
